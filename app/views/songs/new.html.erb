<h1>Enter New Song Info</h1>

<% if @song.errors.any? %>
    <h2>Here are your errors, which must be corrected:</h2>
    <ul>
    <% @song.errors.full_messages.each do |mess| %>
        <li><%= mess %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @song do |f| %>
    Title: <%= f.text_field :title %><br>
    Song Released? <%= f.check_box :released %><br>
    Year Released: <%= f.number_field :release_year %><br>
    Artist Name: <%= f.text_field :artist_name %><br>
    Genre: <%= f.text_field :genre %><br>
    <%= f.submit %>
<% end %>

<%= link_to "Back to Songs", songs_path %>